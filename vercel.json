{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 60,
      "memory": 3008
    }
  },
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "installCommand": "pip install --upgrade pip setuptools wheel && pip install --no-cache-dir -r requirements.txt"
}

